{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2017",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "lib": [
      "dom",
      "esnext"
    ],
    "types": [
      "vite/client",
      "node"
    ],
    "sourceMap": true,
    "noEmitOnError": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/dist",
    "**/node_modules"
  ]
}
